<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:padding="10dip"
    >
    <TableRow>
        <Button android:id="@+id/link1"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/schoolsystem"
            android:text="校務系統" />
        <Button android:id="@+id/link2"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/lms"
            android:text="LMS" />
    </TableRow>


    <TableRow>
        <Button android:id="@+id/link3"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/usedauctions"
            android:text="二手拍賣中心" />
        <Button android:id="@+id/link4"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/personalcloudstorage"
            android:text="個人儲存雲" />
    </TableRow>

    <TableRow>
        <Button android:id="@+id/link5"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/projectpage"
            android:text="計畫專頁" />
        <Button android:id="@+id/link6"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/teleconferencingsystem"
            android:text="遠距離會議系統" />
    </TableRow>

    <TableRow>
        <Button android:id="@+id/link7"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/csweb"
            android:text="系網" />
        <Button android:id="@+id/link8"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/onlinechat"
            android:text="線上聊天室" />
    </TableRow>
    tools:context="com.example.cheng.utaipei104_2java2coding.MainActivity">

</TableLayout>
